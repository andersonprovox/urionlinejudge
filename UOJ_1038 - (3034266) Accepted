#include <stdio.h>
 
int main() {
 
   int item, qtd;
    float total;
    
    scanf("%d", &item);
    scanf("%d", &qtd);
    
    switch (item) {
        case 1:
            total = qtd * 4.00;
            printf("Total: R$ %.2f\n", total);
            break;
        case 2:
            total = qtd * 4.50;
            printf("Total: R$ %.2f\n", total);
            break;
        case 3:
            total = qtd * 5.00;
            printf("Total: R$ %.2f\n", total);
            break;
        case 4:
            total = qtd * 2.00;
            printf("Total: R$ %.2f\n", total);
            break;
        case 5:
            total = qtd * 1.50;
            printf("Total: R$ %.2f\n", total);
            break;
    }
 
    return 0;
}
